<Window x:Class="Malash_Airlines.ReservationPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Malash_Airlines"
        mc:Ignorable="d"
        Title="Flight Reservation" Height="600" Width="800" ResizeMode="NoResize"
        Background="#F5F7FA">

    <Window.Resources>
        <!-- Style for labels -->
        <Style x:Key="formLabels" TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- Style for ComboBoxes -->
        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Style for TextBoxes -->
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Style for GroupBox -->
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDE7EE"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>

        <!-- Style for DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="#DDE7EE">
            <TextBlock Text="Flight Reservation" FontSize="24" FontWeight="SemiBold" 
                       Foreground="#2C3E50" VerticalAlignment="Center" Margin="20,0,0,0"/>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Flight Selection Section -->
            <GroupBox Grid.Column="0" Header="Flight Selection">
                <StackPanel>
                    <!-- Departure and Destination -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="Departure:" Style="{StaticResource formLabels}"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" x:Name="departureComboBox" SelectionChanged="DepartureComboBox_SelectionChanged"/>

                        <Label Grid.Row="1" Grid.Column="0" Content="Destination:" Style="{StaticResource formLabels}"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="destinationComboBox" SelectionChanged="DestinationComboBox_SelectionChanged"/>
                    </Grid>

                    <!-- Available Flights -->
                    <Label Content="Available Flights:" Margin="0,10,0,0"/>
                    <DataGrid x:Name="flightsDataGrid" Height="250" SelectionChanged="FlightsDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="40"/>
                            <DataGridTextColumn Header="From" Binding="{Binding Departure}" Width="*"/>
                            <DataGridTextColumn Header="To" Binding="{Binding Destination}" Width="*"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat={}{0:yyyy-MM-dd}}" Width="100"/>
                            <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="70"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C}" Width="70"/>
                            <DataGridTextColumn Header="Aircraft" Binding="{Binding Plane}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </GroupBox>

            <!-- Seat Selection and Reservation -->
            <GroupBox Grid.Column="1" Header="Seat Selection">
                <StackPanel>
                    <TextBlock Text="Flight Details:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBlock x:Name="selectedFlightDetails" Text="No flight selected" Margin="0,0,0,15"/>

                    <!-- Seat Layout Visualization -->
                    <Border BorderBrush="#DDE7EE" BorderThickness="1" Margin="0,15,0,15" Padding="10">
                        <local:SeatLayout x:Name="seatLayoutControl" HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Price Summary -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Total Price:" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" x:Name="totalPriceText" Text="$0.00" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Reserve Button -->
                    <Button Content="Reserve Seat" Click="ReserveButton_Click" x:Name="reserveButton" 
                            IsEnabled="False" Margin="0,20,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- Footer -->
        <Grid Grid.Row="2" Background="#DDE7EE">
            <Button Content="Return to Main Menu" HorizontalAlignment="Right" Margin="0,0,20,0"
                    Click="ReturnButton_Click"/>
        </Grid>
    </Grid>
</Window>
