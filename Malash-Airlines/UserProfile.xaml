<Window x:Class="Malash_Airlines.UserProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Malash_Airlines"
        mc:Ignorable="d"
        Title="User Profile" Height="500" Width="700" ResizeMode="NoResize"
        Loaded="Window_Loaded"
        Background="#F5F7FA">

    <Window.Resources>
        <!-- Style for labels -->
        <Style x:Key="profileLabels" TargetType="Label">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <!-- Style for text boxes -->
        <Style x:Key="profileTextBoxes" TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="Height" Value="40"/>
        </Style>

        <!-- Style for buttons -->
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <!-- Gradient for button background -->
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#4682B4" Offset="0"/>
                        <GradientStop Color="#2F4F4F" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#5A9BD4" Offset="0"/>
                                <GradientStop Color="#3F6F6F" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="50"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="#DDE7EE">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <!-- Logo -->
                <ColumnDefinition Width="*"/>
                <!-- Title -->
                <ColumnDefinition Width="150"/>
                <!-- Back button -->
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <Image Grid.Column="0" Source="/assets/logo.png" Height="50" Width="50" Margin="10,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <!-- Title -->
            <TextBlock Grid.Column="1" Text="User Profile" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Foreground="#2C3E50"/>

            <!-- Back Button -->
            <Button Grid.Column="2" Content="Back to Home" Click="BackButton_Click" Width="130" Margin="5"/>
        </Grid>

        <!-- Content -->
        <Border Grid.Row="1" Background="White" BorderBrush="#2C3E50" BorderThickness="1" Margin="20" CornerRadius="8">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="User Information" FontSize="22" FontWeight="Bold" Foreground="#4682B4" Margin="0,0,0,20"/>

                    <Label Content="Full Name:" Style="{StaticResource profileLabels}"/>
                    <TextBox x:Name="nameTextBox" Style="{StaticResource profileTextBoxes}"/>

                    <Label Content="Email:" Style="{StaticResource profileLabels}"/>
                    <TextBox x:Name="emailTextBox" Style="{StaticResource profileTextBoxes}"/>

                    <Label Content="Username:" Style="{StaticResource profileLabels}"/>
                    <TextBox x:Name="usernameTextBox" Style="{StaticResource profileTextBoxes}"/>

                    <Label Content="Customer Type:" Style="{StaticResource profileLabels}"/>
                    <TextBox x:Name="customerTypeTextBox" Style="{StaticResource profileTextBoxes}" IsReadOnly="True"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                        <Button Content="Save Changes" Click="SaveChanges_Click" Width="170" Margin="10"/>
                        <Button Content="Cancel" Click="Cancel_Click" Width="170" Margin="10"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Footer -->
        <StatusBar Grid.Row="2" Background="#DDE7EE">
            <StatusBarItem>
                <TextBlock x:Name="statusMessage" Foreground="#2C3E50"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>