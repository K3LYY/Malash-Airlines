<Window x:Class="Malash_Airlines.FlightMapVisualization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Malash_Airlines"
        mc:Ignorable="d"
        Title="Flight Map Visualization" Height="550" Width="800" 
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Style for buttons -->
        <Style x:Key="mapButton" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <!-- Gradient background -->
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#4682B4" Offset="0"/>
                        <!-- Steel Blue -->
                        <GradientStop Color="#2F4F4F" Offset="1"/>
                        <!-- Dark Slate Gray -->
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#5A9BD4" Offset="0"/>
                                <!-- Lighter blue on hover -->
                                <GradientStop Color="#3F6F6F" Offset="1"/>
                                <!-- Lighter gray on hover -->
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <Grid Background="#F5F7FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Map Canvas with border for better appearance -->
        <Border Grid.Row="0" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="5" 
                Margin="10">
            <Canvas x:Name="mapCanvas" 
                    Width="780" 
                    Height="450" 
                    Background="AliceBlue" 
                    ClipToBounds="True" />
        </Border>

        <!-- Close Button -->
        <Button Grid.Row="1" 
                Content="Close Map" 
                Style="{StaticResource mapButton}" 
                HorizontalAlignment="Center" 
                Margin="0,5,0,10" 
                Click="CloseButton_Click"/>
    </Grid>
</Window>