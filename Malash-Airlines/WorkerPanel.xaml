<Window x:Class="Malash_Airlines.WorkerPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel Pracownika" Height="650" Width="1000"
        Background="#E8ECEF">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#4682B4" Offset="0"/>
                        <GradientStop Color="#2F4F4F" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#5A9BD4" Offset="0"/>
                                <GradientStop Color="#3F6F6F" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Style.Resources>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2C3E50"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="Margin" Value="0,10"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2C3E50"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5"/>
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Style.Resources>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2C3E50"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5"/>
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Style.Resources>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#2C3E50"/>
            <Setter Property="BorderThickness" Value="1,1,1,0"/>
            <Setter Property="Margin" Value="0,0,2,0"/>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2C3E50"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,15" BorderBrush="#2C3E50" BorderThickness="1">
            <TextBlock Text="Panel Pracownika - Malash Airlines" FontSize="24" FontWeight="SemiBold" Foreground="#2C3E50" 
                       HorizontalAlignment="Center" />
        </Border>

        <TabControl Grid.Row="1" Margin="0,5,0,0" x:Name="MainTabControl">
            <TabItem Header="Klienci">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="0,0,10,0" Padding="15" BorderBrush="#2C3E50" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Text="Zarządzanie Klientami" FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,10" />
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBox x:Name="SearchEmailTextBox" Width="200" Text="Wyszukaj po emailu" Foreground="Gray" 
                             GotFocus="SearchEmailTextBox_GotFocus" LostFocus="SearchEmailTextBox_LostFocus" />
                                <Button Content="Szukaj" x:Name="SearchUsersButton" Width="100" Margin="10,0,0,0" Click="SearchUsersButton_Click" />
                            </StackPanel>

                            <DataGrid Grid.Row="2" x:Name="UsersDataGrid" Margin="0,5">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50" />
                                    <DataGridTextColumn Header="Imię i Nazwisko" Binding="{Binding Name}" Width="*" />
                                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*" />
                                    <DataGridTextColumn Header="Typ" Binding="{Binding CustomerType}" Width="100" />
                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel Grid.Row="3" Orientation="Horizontal">
                                <Button Content="Odśwież" x:Name="RefreshUsersButton" Click="RefreshUsersButton_Click" />
                                <Button Content="Zmien typ" x:Name="UpgradeToBusinessButton" Margin="10,10,0,0" Click="UpgradeToBusinessButton_Click" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Grid.Column="1" Background="White" CornerRadius="10" Margin="10,0,0,0" Padding="15" BorderBrush="#2C3E50" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Text="Rezerwacje" FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,10" />

                            <Grid Grid.Row="1" Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Klient:" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <ComboBox Grid.Row="0" Grid.Column="1" x:Name="UserComboBox" DisplayMemberPath="Name" SelectedValuePath="ID" SelectionChanged="UserComboBox_SelectionChanged" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Lot:" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="FlightComboBox" DisplayMemberPath="FlightDetails" SelectedValuePath="ID" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Miejsce:" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <Grid Grid.Row="2" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="SeatNumberTextBox" Grid.Column="0" IsReadOnly="True" />
                                    <Button x:Name="SelectSeatButton" Grid.Column="1" Content="Wybierz" Width="100" Margin="10,0,0,0" Click="SelectSeatButton_Click" />
                                </Grid>

                                <Button Grid.Row="3" Grid.Column="1" Content="Dodaj Rezerwację" x:Name="AddReservationButton" HorizontalAlignment="Left" Click="AddReservationButton_Click" />

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Lotnisko wylotu:" Margin="0,0,10,0" VerticalAlignment="Center" Visibility="Collapsed" x:Name="BusinessDepartureLabel" />
                                <ComboBox Grid.Row="4" Grid.Column="1" x:Name="BusinessDepartureComboBox" DisplayMemberPath="Name" SelectedValuePath="ID" Visibility="Collapsed" />

                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Lotnisko przylotu:" Margin="0,0,10,0" VerticalAlignment="Center" Visibility="Collapsed" x:Name="BusinessDestinationLabel" />
                                <ComboBox Grid.Row="5" Grid.Column="1" x:Name="BusinessDestinationComboBox" DisplayMemberPath="Name" SelectedValuePath="ID" Visibility="Collapsed" />

                                <Button Grid.Row="6" Grid.Column="1" Content="Zleć Lot (Business)" x:Name="OrderBusinessFlightButton" HorizontalAlignment="Left" Visibility="Collapsed" Click="OrderBusinessFlightButton_Click" />
                            </Grid>

                            <DataGrid Grid.Row="2" x:Name="ReservationsDataGrid" Margin="0,10" SelectionChanged="ReservationsDataGrid_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding ReservationID}" Width="50" />
                                    <DataGridTextColumn Header="Klient" Binding="{Binding UserName}" Width="*" />
                                    <DataGridTextColumn Header="Lot" Binding="{Binding FlightDetails}" Width="*" />
                                    <DataGridTextColumn Header="Miejsce" Binding="{Binding SeatNumber}" Width="80" />
                                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100" />
                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel Grid.Row="3" Orientation="Horizontal">
                                <Button Content="Odśwież" x:Name="RefreshReservationsButton" Click="RefreshReservationsButton_Click" />
                                <Button Content="Usuń" x:Name="RemoveReservationButton" Margin="10,10,0,0" Click="RemoveReservationButton_Click" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Loty">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="0,0,10,0" Padding="15" BorderBrush="#2C3E50" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Text="Lista Lotów" FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,10" />

                            <DataGrid Grid.Row="1" x:Name="FlightsDataGrid">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50" />
                                    <DataGridTextColumn Header="Wylot" Binding="{Binding Departure}" Width="*" />
                                    <DataGridTextColumn Header="Przylot" Binding="{Binding Destination}" Width="*" />
                                    <DataGridTextColumn Header="Data" Binding="{Binding Date, StringFormat=dd-MM-yyyy}" Width="100" />
                                    <DataGridTextColumn Header="Czas" Binding="{Binding Time}" Width="80" />
                                    <DataGridTextColumn Header="Cena" Binding="{Binding Price, StringFormat={}{0:C}}" Width="100" />
                                    <DataGridTextColumn Header="Samolot" Binding="{Binding Plane}" Width="120" />
                                    <DataGridTextColumn Header="Type" Binding="{Binding FlightType}" Width="*" />
                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel Grid.Row="2" Orientation="Horizontal">
                                <Button Content="Odśwież" x:Name="RefreshFlightsButton" Click="RefreshFlightsButton_Click" />
                                <Button Content="Usuń" x:Name="RemoveFlightButton" Margin="10,10,0,0" Click="RemoveFlightButton_Click" />
                                <Button Content="Układ Miejsc" x:Name="ViewSeatsButton" Margin="10,10,0,0" Click="ViewSeatsButton_Click" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Grid.Column="1" Background="White" CornerRadius="10" Margin="10,0,0,0" Padding="15" BorderBrush="#2C3E50" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Text="Dodaj Nowy Lot" FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,10" />

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Lotnisko wylotu:" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <ComboBox Grid.Row="0" Grid.Column="1" x:Name="DepartureComboBox" DisplayMemberPath="Name" SelectedValuePath="ID" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Lotnisko przylotu:" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="DestinationComboBox" DisplayMemberPath="Name" SelectedValuePath="ID" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Data:" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <DatePicker Grid.Row="2" Grid.Column="1" x:Name="FlightDatePicker" />

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Czas:" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <ComboBox Grid.Row="3" Grid.Column="1" x:Name="FlightTimeComboBox" IsEditable="True">
                                    <ComboBoxItem Content="08:00" />
                                    <ComboBoxItem Content="10:00" />
                                    <ComboBoxItem Content="12:00" />
                                    <ComboBoxItem Content="14:00" />
                                    <ComboBoxItem Content="16:00" />
                                    <ComboBoxItem Content="18:00" />
                                    <ComboBoxItem Content="20:00" />
                                    <ComboBoxItem Content="22:00" />
                                </ComboBox>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Cena:" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <TextBox Grid.Row="4" Grid.Column="1" x:Name="PriceTextBox" />

                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Samolot:" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <ComboBox Grid.Row="5" Grid.Column="1" x:Name="PlaneComboBox" DisplayMemberPath="Name" SelectedValuePath="ID" />
                            </Grid>

                            <Button Grid.Row="2" Content="Dodaj Lot" x:Name="AddFlightButton" HorizontalAlignment="Left" Click="AddFlightButton_Click" />
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Lotniska">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="0,0,10,0" Padding="15" BorderBrush="#2C3E50" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Text="Lista Lotnisk" FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,10" />

                            <DataGrid Grid.Row="1" x:Name="AirportsDataGrid" SelectionChanged="AirportsDataGrid_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50" />
                                    <DataGridTextColumn Header="Nazwa" Binding="{Binding Name}" Width="*" />
                                    <DataGridTextColumn Header="Lokalizacja" Binding="{Binding Location}" Width="*" />
                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel Grid.Row="2" Orientation="Horizontal">
                                <Button Content="Odśwież" x:Name="RefreshAirportsButton" Click="RefreshAirportsButton_Click" />
                                <Button Content="Usuń" x:Name="RemoveAirportButton" Margin="10,10,0,0" Click="RemoveAirportButton_Click" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Grid.Column="1" Background="White" CornerRadius="10" Margin="10,0,0,0" Padding="15" BorderBrush="#2C3E50" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <TextBlock Text="Dodaj Nowe Lotnisko" FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,10" />

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Nazwa:" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <TextBox Grid.Row="0" Grid.Column="1" x:Name="AirportNameTextBox" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Lokalizacja:" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <TextBox Grid.Row="1" Grid.Column="1" x:Name="AirportLocationTextBox" />

                                <Button Grid.Row="2" Grid.Column="1" Content="Dodaj Lotnisko" x:Name="AddAirportButton" HorizontalAlignment="Left" Margin="0,10,0,0" Click="AddAirportButton_Click" />
                            </Grid>

                            <Grid Grid.Row="2" Margin="0,20,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <TextBlock Text="Loty z wybranego lotniska" FontSize="16" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,10" />

                                <DataGrid Grid.Row="1" x:Name="AirportFlightsDataGrid">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50" />
                                        <DataGridTextColumn Header="Cel" Binding="{Binding Destination}" Width="*" />
                                        <DataGridTextColumn Header="Data" Binding="{Binding Date, StringFormat=dd-MM-yyyy}" Width="100" />
                                        <DataGridTextColumn Header="Czas" Binding="{Binding Time}" Width="80" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Samoloty">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="0,0,10,0" Padding="15" BorderBrush="#2C3E50" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Text="Lista Samolotów" FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,10" />

                            <DataGrid Grid.Row="1" x:Name="PlanesDataGrid">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50" />
                                    <DataGridTextColumn Header="Nazwa" Binding="{Binding Name}" Width="*" />
                                    <DataGridTextColumn Header="Układ Miejsc" Binding="{Binding SeatLayoutSummary}" Width="*" />
                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel Grid.Row="2" Orientation="Horizontal">
                                <Button Content="Odśwież" x:Name="RefreshPlanesButton" Click="RefreshPlanesButton_Click" />
                                <Button Content="Usuń" x:Name="RemovePlaneButton" Margin="10,10,0,0" Click="RemovePlaneButton_Click" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Grid.Column="1" Background="White" CornerRadius="10" Margin="10,0,0,0" Padding="15" BorderBrush="#2C3E50" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Text="Dodaj Nowy Samolot" FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,10" />

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Nazwa:" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <TextBox Grid.Row="0" Grid.Column="1" x:Name="PlaneNameTextBox" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Układ miejsc:" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="SeatLayoutComboBox">
                                    <ComboBoxItem Content="4x2 (First) + 26x3-3 (Economy)" Tag="B737" />
                                    <ComboBoxItem Content="6x2 (First) + 40x3-3 (Economy)" Tag="B787" />
                                    <ComboBoxItem Content="8x2 (First) + 30x3-3 (Economy)" Tag="A320" />
                                </ComboBox>

                                <Button Grid.Row="2" Grid.Column="1" Content="Dodaj Samolot" x:Name="AddPlaneButton" HorizontalAlignment="Left" Margin="0,10,0,0" Click="AddPlaneButton_Click" />
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Klienci Biznesowi">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="0,0,10,0" Padding="15" BorderBrush="#2C3E50" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Text="Lista Klientów Biznesowych" FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,10" />

                            <DataGrid Grid.Row="1" x:Name="BusinessClientsDataGrid">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50" />
                                    <DataGridTextColumn Header="Imię i Nazwisko" Binding="{Binding Name}" Width="*" />
                                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*" />
                                    <DataGridTextColumn Header="Typ" Binding="{Binding CustomerType}" Width="100" />
                                </DataGrid.Columns>
                            </DataGrid>

                            <Button Grid.Row="2" Content="Odśwież" x:Name="RefreshBusinessClientsButton" Click="RefreshBusinessClientsButton_Click" />
                        </Grid>
                    </Border>

                    <Border Grid.Column="1" Background="White" CornerRadius="10" Margin="10,0,0,0" Padding="15" BorderBrush="#2C3E50" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Text="Zleć Wynajem Samolotu" FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,10" />

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Klient:" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <ComboBox Grid.Row="0" Grid.Column="1" x:Name="BusinessClientComboBox" DisplayMemberPath="Name" SelectedValuePath="ID" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Lotnisko wylotu:" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="FullPlaneDepartureComboBox" DisplayMemberPath="Name" SelectedValuePath="ID" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Lotnisko przylotu:" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <ComboBox Grid.Row="2" Grid.Column="1" x:Name="FullPlaneDestinationComboBox" DisplayMemberPath="Name" SelectedValuePath="ID" />

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Data:" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <DatePicker Grid.Row="3" Grid.Column="1" x:Name="FullPlaneDatePicker" />

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Czas:" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <ComboBox Grid.Row="4" Grid.Column="1" x:Name="FullPlaneTimeComboBox" IsEditable="True">
                                    <ComboBoxItem Content="08:00" />
                                    <ComboBoxItem Content="10:00" />
                                    <ComboBoxItem Content="12:00" />
                                    <ComboBoxItem Content="14:00" />
                                    <ComboBoxItem Content="16:00" />
                                    <ComboBoxItem Content="18:00" />
                                    <ComboBoxItem Content="20:00" />
                                    <ComboBoxItem Content="22:00" />
                                </ComboBox>

                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Samolot:" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <ComboBox Grid.Row="5" Grid.Column="1" x:Name="FullPlanePlaneComboBox" DisplayMemberPath="Name" SelectedValuePath="ID" />

                                <TextBlock Grid.Row="6" Grid.Column="0" Text="Cena:" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <TextBox Grid.Row="6" Grid.Column="1" x:Name="FullPlanePriceTextBox" />
                            </Grid>

                            <Button Grid.Row="2" Content="Zleć Wynajem" x:Name="OrderFullPlaneButton" HorizontalAlignment="Left" Click="OrderFullPlaneButton_Click" />
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Rezerwacje do potwierdzenia">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="PendingReservationsDataGrid" AutoGenerateColumns="False" SelectionMode="Single" Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ReservationID}" Width="auto" IsReadOnly="True"/>
                            <DataGridTextColumn Header="User" Binding="{Binding UserName}" Width="auto" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding UserEmail}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Flight" Binding="{Binding FlightDetails}" Width="auto" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Seat/Type" Binding="{Binding SeatNumber}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                        <Button x:Name="ConfirmReservationButton" Content="Potwierdz rezerwacje" Click="ConfirmReservationButton_Click" Width="150" Margin="5"/>
                        <Button x:Name="RefreshPendingReservationsButton" Content="Odśwież" Click="RefreshPendingReservationsButton_Click" Width="100" Margin="5"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Zarządzanie Rolami">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="0,0,10,0" Padding="15" BorderBrush="#2C3E50" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Text="Użytkownicy Systemu" FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,10" />
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBox x:Name="RoleSearchEmailTextBox" Width="200" Text="Wyszukaj po emailu" Foreground="Gray" 
                         GotFocus="RoleSearchEmailTextBox_GotFocus" LostFocus="RoleSearchEmailTextBox_LostFocus" />
                                <Button Content="Szukaj" x:Name="RoleSearchUsersButton" Width="100" Margin="10,0,0,0" Click="RoleSearchUsersButton_Click" />
                            </StackPanel>

                            <DataGrid Grid.Row="2" x:Name="RoleUsersDataGrid" Margin="0,5" SelectionChanged="RoleUsersDataGrid_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50" />
                                    <DataGridTextColumn Header="Imię i Nazwisko" Binding="{Binding Name}" Width="*" />
                                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*" />
                                    <DataGridTextColumn Header="Rola" Binding="{Binding Role}" Width="100" />
                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel Grid.Row="3" Orientation="Horizontal">
                                <Button Content="Odśwież" x:Name="RefreshRoleUsersButton" Click="RefreshRoleUsersButton_Click" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Grid.Column="1" Background="White" CornerRadius="10" Margin="10,0,0,0" Padding="15" BorderBrush="#2C3E50" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <TextBlock Text="Zmiana Roli Użytkownika" FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,10" />

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Użytkownik:" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <TextBox Grid.Row="0" Grid.Column="1" x:Name="SelectedUserTextBox" IsReadOnly="True" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Obecna rola:" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <TextBox Grid.Row="1" Grid.Column="1" x:Name="CurrentRoleTextBox" IsReadOnly="True" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Nowa rola:" Margin="0,0,10,0" VerticalAlignment="Center" />
                                <ComboBox Grid.Row="2" Grid.Column="1" x:Name="NewRoleComboBox">
                                    <ComboBoxItem Content="user" />
                                    <ComboBoxItem Content="employee" />
                                </ComboBox>

                                <Button Grid.Row="3" Grid.Column="1" Content="Zmień Rolę" x:Name="ChangeRoleButton" HorizontalAlignment="Left" 
                            Margin="0,10,0,0" Click="ChangeRoleButton_Click" />
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>


        </TabControl>
    </Grid>
</Window>