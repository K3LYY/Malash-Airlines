<Window x:Class="Malash_Airlines.ReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reservation Window" Height="300" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Select a flight:" FontWeight="Bold"/>
        <ComboBox x:Name="FlightComboBox" Height="30" Margin="0,5,0,20" />

        <Button Content="Choose Seat" Click="OpenSeatLayout_Click" Margin="0,0,0,10"/>
        <TextBlock x:Name="SelectedSeatTextBlock" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Confirm" Click="ConfirmReservation_Click" Width="100" Margin="5"/>
            <Button Content="Cancel" Click="Cancel_Click" Width="100" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
