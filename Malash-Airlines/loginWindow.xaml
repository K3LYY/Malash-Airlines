<Window x:Class="Malash_Airlines.loginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Malash_Airlines"
        mc:Ignorable="d"
        Title="loginWindow" Height="450" Width="800">
   
    <Grid>
        <Border Background="Gray" CornerRadius="15" Padding="20" Margin="20">
            <StackPanel VerticalAlignment="Center">
                <!-- Nagłówek -->
                <TextBlock Text="Zaloguj się" FontSize="24" FontWeight="Bold"
                           HorizontalAlignment="Center" Margin="0,10,0,20"/>

                <!-- Pole Login -->
                <TextBlock Text="Nazwa użytkownika" FontSize="14" Margin="0,5"/>
                <TextBox Name="UsernameTextBox" Height="35" BorderThickness="1"
                         BorderBrush="Gray" Padding="5" Style="{StaticResource roundedCorners}"/>


                <!-- Pole Hasło -->
                <TextBlock Text="Hasło" FontSize="14" Margin="0,10,0,5"/>
                <PasswordBox Name="PasswordBox" Height="35" BorderThickness="1"
                             BorderBrush="Gray" Padding="5" Style="{StaticResource roundedCorners}"/>

                <!-- Przycisk Logowania -->
                <Button Content="Zaloguj" Height="40" Background="#4CAF50"
                        Foreground="White" FontWeight="Bold" Margin="0,20,0,0"
                        Style="{StaticResource roundedCorners}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
